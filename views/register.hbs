<style>
html,
body {
    height: 100%;
}

body {
    display: flex;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #e1f1ff;
}

.form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
}

.form-signin .checkbox {
    font-weight: 400;
}

.form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
}

.form-signin .form-control:focus {
    z-index: 2;
}
</style>

<main class="form-signin">
<form method="POST">
    <div class="d-flex justify-content-center">
        <img class="mb-4" src="images/logo.png" alt="cat" width="150">
    </div>
    <h1 class="h3 mb-3 fw-normal text-center">Регистрация</h1>
    <label for="email" class="visually-hidden">Email</label>
    <input id="email" type="email" name="email" class="form-control mb-2" placeholder="Email" required autofocus>
    <label for="login" class="visually-hidden">Логин</label>
    <input id="login" type="text" name="login" class="form-control mb-2" placeholder="Логин" required autofocus>
    <label for="password" class="visually-hidden">Пароль</label>
    <input id="password" type="password" name="password" class="form-control mb-2" placeholder="Пароль" required>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Зарегистрироваться</button>
    {{#if errors.length}}
    {{#each errors}}
    <div class="mt-3 alert alert-danger" role="alert">
        {{msg}}
    </div>
    {{/each}}
    {{/if}}
    <a class="mt-2 w-100 btn btn-outline-secondary" href="/">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left"
            viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg>
        Назад
    </a>
    <p class="mt-3 mb-3 text-muted">Ailurophile &copy; 2021</p>
</form>
</main>